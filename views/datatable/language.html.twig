{% if datatable.language.language is same as(null) %}
    {% if datatable.language.cdnLanguageByLocale is same as(true) %}
        "language": {
            "url": "{{ asset(datatable.language.languageCDNFile[app.request.locale|slice(0, 2)], 'datatables_cdn') }}"
        }
    {% endif %}

    {% if datatable.language.languageByLocale is same as(true) %}
        "language":
            {% include '@SgDatatables/i18n/' ~ app.request.locale|slice(0, 2) ~ '.json.twig' %}
    {% endif %}
{% else %}
    "language":
        {% include '@SgDatatables/i18n/' ~ datatable.language.language|slice(0, 2) ~ '.json.twig' %}
{% endif %}
